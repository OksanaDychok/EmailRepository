@model Mailing_list_app.Models.SendEmail

@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated == true)
{
    <br>
    <p class="lead">Send email</p>

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Subject)
                @Html.TextAreaFor(model => model.Subject, new { rows = "2", cols = "35" })
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Body)
                @Html.TextAreaFor(model => model.Body, new { rows = "6", cols = "35" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Send" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "ViewSendEmail")
    </div>
}
else
{
    <br>
    <p class="lead">If you want send email, you have authenticate</p>
}


